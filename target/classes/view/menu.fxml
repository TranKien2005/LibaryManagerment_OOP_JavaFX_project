<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane stylesheets="/stylesheet/bootstrap.css" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="630.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.menuController">
  <children>
    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
      <TabPane prefHeight="504.0" prefWidth="640.0" tabClosingPolicy="UNAVAILABLE" styleClass="tab-pane">
        <tabs>
          <Tab text="Danh sách tài liệu" styleClass="tab">
            <content>
              <BorderPane styleClass="bg-white">
                <top>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                    <padding>
                      <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <TextField fx:id="tfFilter" promptText="Lọc theo tên" styleClass="form-control" HBox.hgrow="ALWAYS" onAction="#handleFilterAction">
                    </TextField>
                    </HBox>
                </top>
                <center>
                  <TableView fx:id="tvDocuments" styleClass="table, table-hover">
                    <columns>
                      <TableColumn fx:id="colName" prefWidth="100.0" text="Tên" />
                      <TableColumn fx:id="colAuthor" prefWidth="100.0" text="Tác giả" />
                      <TableColumn fx:id="colCategory" prefWidth="100.0" text="Thể loại" />
                      <TableColumn fx:id="colPublisher" prefWidth="100.0" text="Nhà xuất bản" />
                      <TableColumn fx:id="colYear" prefWidth="80.0" text="Năm xuất bản" />
                      <TableColumn fx:id="colQuantity" prefWidth="60.0" text="Số lượng" />
                    </columns>
                     <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                  </TableView>
                </center>
                <right>
                  <VBox spacing="10">
                    <Label text="Chi tiết tài liệu" styleClass="h4"/>
                    <TextArea fx:id="taDocumentDetails" prefWidth="300.0" prefHeight="400.0" styleClass="form-control" editable="false" wrapText="true"/>
                  </VBox>
                </right>
                <padding>
                  <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
              </BorderPane>
            </content>
          </Tab>
          <Tab text="Quản lý" styleClass="tab">
            <content>
              <VBox spacing="20" alignment="CENTER" styleClass="bg-white">
              <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
              </padding>
              <Button text="Thêm tài liệu" styleClass="btn, btn-primary" maxWidth="300" onAction="#onAddDocument"/>
              <Button text="Xóa tài liệu" styleClass="btn, btn-danger" maxWidth="300" onAction="#onDeleteDocument"/>
              <Button text="Sửa tài liệu" styleClass="btn, btn-info" maxWidth="300" onAction ="#onEditDocument"/>
              <Button text="Quản lý thành viên" styleClass="btn, btn-success" maxWidth="300" onAction="#onManageMembers"/>
              </VBox>
            </content>
          </Tab>
          <Tab text="Mượn/Trả tài liệu" styleClass="tab">
            <content>
              <VBox spacing="15" alignment="TOP_LEFT" styleClass="bg-white">
                <padding>
                  <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <ComboBox fx:id="cbMembers" prefWidth="250.0" promptText="Chọn thành viên" styleClass="form-control" editable="true"/>
                <ComboBox fx:id="cbDocuments" prefWidth="250.0" promptText="Chọn tài liệu" styleClass="form-control" editable="true"/>
                <DatePicker fx:id="dpReturnDate" promptText="Ngày trả" styleClass="form-control"/>
                <DatePicker fx:id="dpBorrowDate" promptText="Ngày mượn" styleClass="form-control"/>
                <HBox spacing="10">
                  <Button text="Mượn tài liệu" styleClass="btn, btn-primary" onAction="#handleBorrowDocument"/>
                  <Button text="Trả tài liệu" styleClass="btn, btn-success" onAction="#handleReturnDocument"/>
                </HBox>
                <TableView fx:id="tvBorrowedDocuments" prefHeight="200.0" styleClass="table, table-hover">
                  <columns>
                    <TableColumn fx:id="colMember" text="Thành viên" prefWidth="100.0"/>
                    <TableColumn fx:id="colDocument" text="Tài liệu" prefWidth="100.0"/>
                    <TableColumn fx:id="colBorrowDate" text="Ngày mượn" prefWidth="100.0"/>
                    <TableColumn fx:id="colReturnDate" text="Ngày trả" prefWidth="100.0"/>
                    <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="100.0"/>
                  </columns>
                </TableView>
              </VBox>
            </content>
          </Tab>
        </tabs>
      </TabPane>
    </VBox>
  </children>
</AnchorPane>