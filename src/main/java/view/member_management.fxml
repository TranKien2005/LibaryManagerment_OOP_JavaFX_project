<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" fitToHeight="true" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MemberManagementController">
   <content>
      <BorderPane stylesheets="/stylesheet/bootstrap.css">
         <top>
            <VBox fx:id="rootVBox" spacing="10" styleClass="bg-primary" alignment="CENTER">
               <padding>
                  <Insets top="15" right="20" bottom="15" left="20"/>
               </padding>
               <Label text="Quản lý Thành viên" styleClass="h3" textFill="white">
                  <font>
                     <Font name="System Bold" size="20.0"/>
                  </font>
               </Label>
               <HBox spacing="10" alignment="CENTER">
                  <TextField fx:id="tfMemberFilter" promptText="Lọc theo tên thành viên" styleClass="form-control" HBox.hgrow="ALWAYS"/>
                  <Button text="Lọc" styleClass="btn, btn-light" onAction="#handleMemberFilterAction"/>
               </HBox>
            </VBox>
         </top>
         
         <center>
            <VBox spacing="10" styleClass="bg-white" alignment="CENTER" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets top="15" right="15" bottom="15" left="15"/>
               </padding>
               <Label text="Danh sách Thành viên" styleClass="h5"/>
               <TableView fx:id="tvMembers" styleClass="table, table-hover, table-striped" VBox.vgrow="ALWAYS" minHeight="200">
                  <columns>
                     <TableColumn fx:id="colUserId" prefWidth="40.0" text="Mã" />
                     <TableColumn fx:id="colUsername" prefWidth="120.0" text="Tên thành viên" />
                     <TableColumn fx:id="colEmail" prefWidth="150.0" text="Email" />
                     <TableColumn fx:id="colPhone" prefWidth="100.0" text="Số điện thoại" />
                     <TableColumn fx:id="colAddress" prefWidth="120.0" text="Địa chỉ" />
                     <TableColumn fx:id="colSex" prefWidth="60.0" text="Giới tính" />
                     <TableColumn fx:id="colAge" prefWidth="50.0" text="Tuổi" />
                  </columns>
                   <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
               </TableView>
               <VBox spacing="12" alignment="TOP_CENTER" styleClass="card" VBox.vgrow="ALWAYS">
                  <padding>
                     <Insets top="20" right="20" bottom="20" left="20"/>
                  </padding>
                  <Label text="Thông tin Thành viên" styleClass="h4"/>
                  <TextField fx:id="tfUserId" promptText="Mã thành viên" styleClass="form-control"/>
                  <TextField fx:id="tfUsername" promptText="Tên thành viên" styleClass="form-control"/>
                  <TextField fx:id="tfEmail" promptText="Email" styleClass="form-control"/>
                  <TextField fx:id="tfPhone" promptText="Số điện thoại" styleClass="form-control"/>
                  <TextField fx:id="tfAddress" promptText="Địa chỉ" styleClass="form-control"/>
                  <ComboBox fx:id="cbSex" promptText="Giới tính" styleClass="form-control"/>
                  <TextField fx:id="tfAge" promptText="Tuổi" styleClass="form-control"/>
                  <HBox spacing="10" alignment="CENTER">
                     <Button text="Thêm" styleClass="btn, btn-success" onAction="#handleAddUser"/>
                     <Button text="Cập nhật" styleClass="btn, btn-primary" onAction="#handleUpdateUser"/>
                     <Button text="Xóa" styleClass="btn, btn-danger" onAction="#handleDeleteUser"/>
                  </HBox>
               </VBox>
            </VBox>
         </center>
         
         <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="bg-light">
               <padding>
                  <Insets top="10" right="20" bottom="10" left="20"/>
               </padding>
               <Button text="Quay lại Menu" styleClass="btn, btn-secondary" onAction="#handleBackToMainMenu"/>
            </HBox>
         </bottom>
      </BorderPane>
   </content>
</ScrollPane>